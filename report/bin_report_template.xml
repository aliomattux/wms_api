<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_simple_barcode">
        <t t-call="web.basic_layout">
            <div class="page" style="text-align: center;">
                <h2><span t-field="doc.name"/></h2>
                <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(doc.name), 600, 150)" style="height:4rem"/>
            </div>
            <div style="text-align: left; margin-top: 0.5rem;"><h7>Receiving Bin</h7></div>
        </t>
    </template>
    <template id="report_bin">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="wms.report_simple_barcode">
                    <t t-set="doc" t-value="doc"/>
                </t>
            </t>
        </t>
    </template>
</odoo>
