<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_replenishment_search" model="ir.ui.view">
        <field name="name">Replenishment Search</field>
        <field name="model">stock.replenishment</field>
        <field name="arch" type="xml">
            <search string="Name">
                <field name="name" string="replenishment #" filter_domain="[('name','ilike',self)]"/>
            </search>
        </field>
    </record>

    <record id="stock_replenishment_tree" model="ir.ui.view">
        <field name="name">Replenishment Tree</field>
        <field name="model">stock.replenishment</field>
        <field name="arch" type="xml">
            <tree string="replenishments">
                <field name="create_date" />
                <field name="name"/>
                <field name="replen_type" />
                <field name="create_uid" />
            </tree>
        </field>
    </record>
    <record id="view_stock_replenishment_form" model="ir.ui.view">
        <field name="name">stock.replenishment.form</field>
        <field name="model">stock.replenishment</field>
        <field eval="12" name="priority"/>
        <field name="arch" type="xml">
            <form string="Replenishment" readonly="1">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines" name="lines">
                            <field name="lines" mode="tree" readonly="1">
                                <tree>
                                    <field name="product" />
                                </tree>
                            </field>
                        </page>
                        <page string="Additional Info" name="extra">
                            <group>
                                <group string="Other Information" name="other_infos">
                                </group>
                                <group>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="stock_replenishment_action" model="ir.actions.act_window">
        <field name="name">Replenishment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.replenishment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stock_replenishment_tree"/>
    </record>

    <menuitem id="menu_replenishment" parent="menu_wms_movement" action="stock_replenishment_action"/>
</odoo>
